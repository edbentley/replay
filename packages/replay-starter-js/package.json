{
  "name": "replay-starter-js",
  "private": true,
  "version": "0.8.0",
  "description": "A starter template for building a Replay game (JavaScript)",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "webpack-dev-server --config ./web/webpack.config.js --open --mode=development",
    "lint": "eslint .",
    "build": "npm run build-web && npm run build-swift",
    "build-web": "webpack --config ./web/webpack.config.js",
    "build-swift": "webpack --config ./swift/webpack.config.js",
    "serve": "serve web/dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "ci": "npm run lint && npm run build && npm run test"
  },
  "dependencies": {
    "@replay/core": "0.8.0",
    "@replay/web": "0.8.0",
    "core-js": "^3.8.3",
    "regenerator-runtime": "^0.13.7"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@replay/test": "0.8.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "html-webpack-plugin": "^5.0.0",
    "jest": "^26.6.3",
    "prettier": "2.2.1",
    "serve": "^11.3.2",
    "webpack": "^5.20.1",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  }
}
